
#include <iostream>
#include <string>
using namespace std;
class Person {
public:
    string password;
};

class Client {
public:
    int id;
};

class ClientManager {
public:
    static void printClientMenu() {
        cout << "Client Menu\n";
      
    }

    static void updatePassword(Person* person) {
        cout << "Updating password for person\n";
        
    }

    static Client* login(int id, std::string password) {
        cout << "Logging in with id: " << id << " and password: " << password << "\n";
        
        return nullptr;
    }

    static bool clientOptions(Client* client) {
        cout << "Client options for client with id: " << client->id << "\n";
       
        return false;
    }
};
